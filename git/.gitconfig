    email = ruanrm@gmail.com
[color]
    diff = auto
    grep = auto
    interactive = auto
    status = auto
    branch = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    # Add
    ad = add
    aa = add .

    # Commit
    com = commit -m

    # Checkout
    co = checkout
    cb = checkout -b

    # Diff
    df = diff

    # Status
    st = status -sb

    # Pull
    pom = pull origin master
    ps = push
    pl = pull

    # Log
    lg = log -pgit ps
    tree = log --graph --pretty=oneline --decorate
    ll   = log --pretty=oneline --decorate --abbrev-commit --max-count=15
    lll  = git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --
    rn = log -M

    short = shortlog -s -n
    
    br = branch

    fu = fetch upstream
[push]
        # 'git push' will push the current branch to its tracking branch
        # the usual default is to push all branches
        default = tracking
[core]
        excludesfile = ~/.gitignore_global